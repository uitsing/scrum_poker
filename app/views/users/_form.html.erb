<%= turbo_frame_tag 'user' do %>
  <div class="text-xl text-blue-700">
    <%= user.name %>
    <%= link_to '✏️', '#' %>
  </div>
  <div class="fixed w-screen h-screen top-0 left-0 flex justify-center items-center">
    <%= link_to '#', data: { 'turbo-stream' => '_top' } do %>
      <div class="z-40 fixed bg-gray-500 w-screen h-screen top-0 left-0 opacity-50 cursor-default"></div>
    <% end %>
    <div class="z-50 bg-white p-6 pt-4 rounded-2xl shadow">
      <%= form_with model: user do |form| %>
        <div>
          <h3 class="text-center mb-2 text-lg leading-6 font-medium text-blue-700">
            Set display name
          </h3>
          <%= form.label :name, 'Display name', class: 'block text-sm font-medium text-gray-700' %>
          <div class="mt-1">
            <%= form.text_field :name, maxlength: 25, autocomplete: "off", class: 'shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-80 sm:text-sm border-gray-300 rounded-md' %>
          </div>
          <div class="flex justify-end mt-4">
            <%= link_to 'cancel', '#', data: { 'turbo-stream' => '_top' }, class: 'w-20 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
            <%= form.submit 'Save', class: 'ml-4 w-20 inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
