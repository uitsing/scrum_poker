<%= turbo_frame_tag 'hand' do %>
  <%= turbo_stream_from [room, 'hand_reset'] %>
  <div id='hand' class="grid grid-cols-6 lg:grid-cols-12 gap-1 lg:gap-3 mb-8 mx-4 lg:mx-20">
    <% Card::POINTS.each do |point| %>
      <div class="border-4 border-white rounded-2xl shadow card-translate
        <%= 'select-card-translate border-blue-300' if card.try(:point) == point %>
      ">
      <%= form_with scope: :card, url: room_cards_path(room.base) do |form| %>
        <%= form.hidden_field :point, value: point %>
        <%= form.submit point, class: 'w-full h-20 lg:h-28 bg-white border-4
         border-blue-500 rounded-xl text-2xl lg:text-3xl text-blue-500 font-bold' %>
      <% end %>
      </div>
    <% end %>
  </div>
<% end %>
